{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    /* Nếu bạn muốn dùng alias (ví dụ @/components) thì thêm paths vào đây */
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "App.tsx",
    "src",
    "custom.d.ts",
    "index.js",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}